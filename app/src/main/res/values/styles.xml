<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:textAlignment">center</item>
        <item name="android:inputType"> textNoSuggestions</item>
    </style>

    <style name="AppTheme.TextView.YeezyMain">
        <item name="android:textColor">@color/Main</item>
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/yeezy_tstar_bold</item>
    </style>

    <style name="AppTheme.TextView.YeezyDate">
        <item name="android:textColor">@color/Main</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/adi_haus_din_medium</item>
    </style>

    <style name="AppTheme.TextView.Stats_head">
        <item name="android:textColor">@color/Main</item>
        <item name="android:textSize">24dp</item>
        <item name="android:spacing">1.2dp</item>
        <item name="fontFamily">@font/adi_haus_din_bold</item>
    </style>

    <style name="AppTheme.TextView.Stats_texts">
        <item name="android:textColor">@color/Main</item>
        <item name="android:textSize">16dp</item>
        <item name="android:spacing">1.2dp</item>
        <item name="fontFamily">@font/adi_haus_din_medium</item>
    </style>

    <style name="AppTheme.TextView.Stats_content1">
        <item name="android:textColor">@color/Success_s</item>
        <item name="android:textSize">16dp</item>
        <item name="android:spacing">1.2dp</item>
        <item name="fontFamily">@font/adi_haus_din_regular</item>
    </style>

    <style name="AppTheme.TextView.Stats_content2">
        <item name="android:textColor">@color/Failure_s</item>
        <item name="android:textSize">16dp</item>
        <item name="android:spacing">1.2dp</item>
        <item name="fontFamily">@font/adi_haus_din_regular</item>
    </style>

    <style name="AppTheme.TextView.Stats_content3">
        <item name="android:textColor">@color/Medium_s</item>
        <item name="android:textSize">16dp</item>
        <item name="android:spacing">1.2dp</item>
        <item name="fontFamily">@font/adi_haus_din_regular</item>
    </style>

    <style name="AppTheme.TextView.About_text">
        <item name="android:textColor">@color/Main</item>
        <item name="android:textSize">16dp</item>
        <item name="android:spacing">1.2dp</item>
        <item name="fontFamily">@font/adi_haus_din_regular</item>
    </style>

    <style name="AppTheme.TextView.About_text1">
        <item name="android:textColor">@color/Main</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">16dp</item>
        <item name="android:spacing">1.2dp</item>
        <item name="fontFamily">@font/adi_haus_din_regular</item>
    </style>

</resources>
